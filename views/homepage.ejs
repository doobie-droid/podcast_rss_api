<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Podcasts</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    
</head>
<style>
    .page-content {
    padding-top: 50px;
    padding-right: 30px;
    padding-bottom: 50px;
    padding-left: 50px;
    }
</style>
<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary bg-dark sticky-top " data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">DummyProject</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">Home</a>
                    </li>
                </ul>
            </div>
        </div>
    
    </nav>

    <div class="page-content">
   <form class="row mb-3" method="post" action="/podcast/add">
       <div class="col-sm-10">
           <input type="text" class="form-control" id="rssLink" name="rssLink" placeholder="Enter Rss Link to Add Podcasts">
       </div>
       <div class="col-sm-2">
           <button type="submit" class="btn btn-outline-dark mb-3">Add </button>
       </div>
   </form>
   <br>
   <% if(podcasts.length >0){ %>
    <% podcasts.forEach(function(podcast) { %>
   <div class="card mb-3" style="max-width: 540px;">
       <div class="row g-0">
           <div class="col-md-4">
               <img src="<%=podcast.image %>" class="img-fluid rounded-start" alt="...">
           </div>
           <div class="col-md-8">
               <div class="card-body">
                   <h5 class="card-title"><a href="/podcast/episodes/<%= podcast.id %>"><%= podcast.title %></a></h5>
                   <p class="card-text"><%- podcast.description.slice(0,70) + '...'  %></p>
                   <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
               </div>
           </div>
       </div>
   </div>
   <% }); %>
   <% } else{ %>
   <h1>You have not yet added any podcasts to the database</h1>
   <% } %>
    
</div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous">
    </script>
</body>

</html>